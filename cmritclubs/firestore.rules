rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow users to read and write their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow college officials to read all user documents and update approval fields
      allow read: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'college_official';
      
      // Allow college officials to update approvals and status fields only
      allow update: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'college_official' &&
        // Only allow updating approval-related fields
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['approvals', 'overallStatus', 'status', 'updatedAt']));
    }

    match /applications/{applicationId} {
      // Allow users to read and write their own applications
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      
      // Allow college officials to read and update all applications
      allow read, update: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'college_official';
      
      // Allow authenticated users to create applications
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }

    match /permissionLetters/{letterId} {
      // Allow users to read and write their own permission letters
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      
      // Allow college officials to read and update all permission letters
      allow read, update: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'college_official';
      
      // Allow authenticated users to create permission letters
      allow create: if request.auth != null && request.auth.uid == request.resource.data.uid;
    }
  }
}