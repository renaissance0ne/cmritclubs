rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow college officials to read user data for approval process
      allow read: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'college_official';
    }

    // Club applications collection
    match /applications/{applicationId} {
      // Users can read/write their own applications
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      // College officials can read and update applications
      allow read, update: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'college_official';
    }

    // Permission letters collection
    match /permissionLetters/{letterId} {
      // Club leaders can read/write their own letters
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
      // College officials can read and update permission letters
      allow read, update: if request.auth != null &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'college_official';
    }
  }
}